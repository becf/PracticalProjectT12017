@model EmbrOnlineStore.Models.ShopModel

<div class="alert alert-success" role="alert" style="font-family: 'Roboto'">
    <span class="glyphicon glyphicon-ok"></span> Thank you! Your order has been completed.
</div>

<p>Your order confirmation number is<b> @Model.currentReceipt.order.orderID </b></p>

<br />
<span class="input-group-btn " style="float:left;">
    <button class="btn btn-success" onclick="Back()" type="button">Keep Shopping</button>
</span>
<script>
    function Back() {
        $("#content_div").html(' <img src="/Content/Images/ajax-loader.gif" style="align-content:center;" />')
        $("#content_div").load('@Url.Action("LoadItemCatalogView", "Home")')
    }
</script>